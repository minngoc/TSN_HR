@model TSN_HR_Web.ViewModels.NhanVienCreateViewModel
@{
    Layout = null;
}

<form asp-controller="NhanViens" asp-action="Create" method="post" class="nhanvien-create-form">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly"
     class="text-danger mb-3"></div>

    <!-- ================= HEADER ================= -->
    <div class="mb-3">
        <h4 class="fw-semibold mb-2">Thông tin nhân viên</h4>

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active">Sơ yếu lý lịch</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted">Thông tin bảo hiểm</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-muted">Hợp đồng</a>
            </li>
        </ul>
    </div>

    <!-- ================= CONTENT ================= -->
    <div class="pt-4">
        <div class="row">
            <!-- ===== AVATAR ===== -->
            <div class="col-md-3 text-center">
                <div class="avatar-wrapper mb-3">
                    <img src="https://via.placeholder.com/120" class="rounded-circle img-fluid" alt="avatar" />
                    <button type="button" class="btn btn-primary btn-sm avatar-edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                </div>
            </div>

            <!-- ===== FORM ===== -->
            <div class="col-md-9">

                <!-- HỌ TÊN / NGÀY SINH -->
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Họ và Tên đệm</label>
                        <input asp-for="HoVaTenDem" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Tên</label>
                        <input asp-for="Ten" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Ngày sinh</label>
                        <input asp-for="NgaySinh" type="date" class="form-control rounded-pill" />
                    </div>
                </div>

                <!-- GIỚI TÍNH -->
                <div class="mb-3">
                    <label class="form-label d-block">Giới tính</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="GioiTinh" value="1" />
                        <label class="form-check-label">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="GioiTinh" value="2" />
                        <label class="form-check-label">Nữ</label>
                    </div>
                </div>

                <!-- NƠI SINH / NGUYÊN QUÁN -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Nơi sinh</label>
                        <input asp-for="NoiSinh" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nguyên quán</label>
                        <input asp-for="NguyenQuan" class="form-control rounded-pill" />
                    </div>
                </div>

                <!-- DÂN TỘC / TÔN GIÁO -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Dân tộc</label>
                        <input asp-for="DanToc" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Tôn giáo</label>
                        <input asp-for="TonGiao" class="form-control rounded-pill" />
                    </div>
                </div>

                <!-- CCCD -->
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Số CCCD/CMND</label>
                        <input asp-for="CMND" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Ngày cấp</label>
                        <input asp-for="NgayCap" type="date" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Nơi cấp</label>
                        <input asp-for="NoiCap" class="form-control rounded-pill" />
                    </div>
                </div>

                <!-- ĐIỆN THOẠI -->
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại cá nhân</label>
                        <input asp-for="SoDienThoai" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại nhà</label>
                        <input asp-for="SoDienThoaiNha" class="form-control rounded-pill" />
                    </div>
                </div>

                <!-- ĐỊA CHỈ -->
                <div class="mb-3">
                    <label class="form-label">Địa chỉ thường trú</label>
                    <input asp-for="DiaChiThuongTru" class="form-control rounded-pill" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Địa chỉ tạm trú</label>
                    <input asp-for="DiaChiTamTru" class="form-control rounded-pill" />
                </div>

                <!-- NGÂN HÀNG -->
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Số tài khoản</label>
                        <input asp-for="SoTaiKhoan" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Ngân hàng</label>
                        <input asp-for="NganHang" class="form-control rounded-pill" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Mã số thuế</label>
                        <input asp-for="MaSoThue" class="form-control rounded-pill" />
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- ================= FOOTER ================= -->
    <div class="d-flex justify-content-end gap-3 mt-4">
        <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
            Hủy
        </button>
        <button type="submit" class="btn btn-primary rounded-pill px-4">
            Lưu
        </button>
    </div>
</form>