@model IEnumerable<TSN_HR_Web.ViewModels.NhanVienListItemViewModel>

@section Styles {
    <link rel="stylesheet" href="~/css/NhanVien.css" />
}

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="nhanvien-page">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">Danh Sách Nhân Viên</h3>

        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadCreateForm()">
            + Thêm mới nhân viên
        </button>
    </div>

    <!-- TABS -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link active" href="#">
                Nhân viên hiện tại
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-muted" href="#">
                Nhân viên đã nghỉ
            </a>
        </li>
    </ul>

    <!-- TABLE -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã nhân viên</th>
                        <th>Họ và Tên</th>
                        <th>Chức vụ</th>
                        <th class="text-center">Sơ yếu lý lịch</th>
                        <th class="text-center">Thông tin bảo hiểm</th>
                        <th class="text-center">Hợp đồng</th>
                        <th class="text-center">Thông tin lương</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaNhanVien</td>
                            <td>@item.HoVaTen</td>
                            <td>@item.TenChucVu</td>

                            <td class="text-center">
                                <button class="btn btn-sm btn-pill btn-purple">
                                    Chi tiết
                                </button>
                            </td>

                            <td class="text-center">
                                <button class="btn btn-sm btn-pill btn-warning text-white">
                                    Chi tiết
                                </button>
                            </td>

                            <td class="text-center">
                                <button class="btn btn-sm btn-pill btn-success">
                                    Chi tiết
                                </button>
                            </td>

                            <td class="text-center">
                                <button class="btn btn-sm btn-pill btn-pink">
                                    Chi tiết
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PAGINATION (fake UI trước, backend làm sau) -->
    <nav class="mt-4 d-flex justify-content-end">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link">Trước</a>
            </li>
            <li class="page-item active">
                <a class="page-link">1</a>
            </li>
            <li class="page-item">
                <a class="page-link">2</a>
            </li>
            <li class="page-item">
                <a class="page-link">3</a>
            </li>
            <li class="page-item">
                <a class="page-link">Sau</a>
            </li>
        </ul>
    </nav>

</div>

<!-- ===== MODAL CREATE ===== -->
<div class="modal fade" id="createNhanVienModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thêm nhân viên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalBody"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.loadCreateForm = function () {
            $("#createModalBody").load("@Url.Action("Create", "NhanViens")", function (response, status, xhr) {
                if (status === "error") {
                    console.error("Load Create form failed", xhr.status);
                    return;
                }

                const modal = new bootstrap.Modal(
                    document.getElementById('createNhanVienModal')
                );
                modal.show();
            });
        };
    </script>
}