@{
    ViewData["Title"] = "Danh sách Nhân Viên";
}

<link rel="stylesheet" href="~/css/NhanVien.css" />

<div class="nhanvien-page">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">Danh Sách Nhân Viên</h3>

        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadCreateForm()">
            + Thêm mới nhân viên
        </button>
    </div>

    <!-- TAB -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <span class="nav-link active">
                Nhân viên hiện tại
            </span>
        </li>
    </ul>

    <!-- TABLE -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive p-3">
            <table id="nhanVienTable" class="display w-100"></table>
        </div>
    </div>
</div>

<!-- ===== MODAL CREATE ===== -->
<div class="modal fade" id="createNhanVienModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-nhanvien-wide modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin nhân viên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="submitCreateNhanVien()">
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<!-- MODAL DETAILS -->
<div class="modal fade" id="detailsNhanVienModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-nhanvien-wide modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin nhân viên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="detailsNhanVienModalBody"></div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {

            window.nhanVienTable = $('#nhanVienTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetData", "NhanViens")',
                    type: 'GET'
                },
                scrollY: '55vh',
                scrollCollapse: true,
                paging: true,

                columns: [
                    {
                        data: 'ma_nhan_vien',
                        title: 'Mã nhân viên',
                        className: 'text-center'
                    },
                    {
                        data: 'ho_va_ten',
                        title: 'Họ và Tên',
                        className: 'text-center'
                    },
                    {
                        data: 'ten_chuc_vu',
                        title: 'Chức vụ',
                        className: 'text-center',

                    },
                    {
                        data: 'trang_thai',
                        title: 'Trạng thái',
                        className: 'text-center',
                        render: function (data) {
                            return `
                                                <span class="status-pill">
                                                    ${data}
                                                </span>
                                            `;
                        }
                    },
                    {
                        data: 'id',
                        title: 'Chi tiết',
                        orderable: false,
                        searchable: false,
                        className: 'text-center',
                        render: function (id) {
                            return `
                                                        <button class="btn btn-sm btn-warning text-white"
                                                                onclick="loadNhanVienDetails(${id})">
                                                            Chi tiết
                                                        </button>
                                                    `;
                        }
                    }
                ],

                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.8/i18n/vi.json',
                    emptyTable: "Chưa có thông tin..."
                }
            });

            setTimeout(() => {
                nhanVienTable.columns.adjust();
            }, 100);
        });
        $(document).on("change", "#boPhanSelect", function () {
            const boPhanId = this.value;
            const chucVuSelect = $("#chucVuSelect");

            chucVuSelect.html('<option value="">-- Chọn --</option>')
                .prop("disabled", true);

            if (!boPhanId) return;

            fetch(`/NhanViens/GetChucVuByBoPhan?boPhanId=${boPhanId}`)
                .then(res => res.json())
                .then(data => {
                    data.forEach(cv => {
                        chucVuSelect.append(
                            `<option value="${cv.id}">${cv.ten_chuc_vu}</option>`
                        );
                    });
                    chucVuSelect.prop("disabled", false);
                });
        });
        // ===== MODAL CREATE =====
        window.loadCreateForm = function () {
            $("#createModalBody").load("@Url.Action("Create", "NhanViens")", function (response, status) {
                if (status === "error") {
                    console.error("Load Create form failed");
                    return;
                }
                new bootstrap.Modal(
                    document.getElementById('createNhanVienModal')
                ).show();
            });
        };
        window.loadNhanVienDetails = function (id) {
            $("#detailsNhanVienModalBody").html("");

            $("#detailsNhanVienModalBody").load(`/NhanViens/Details/${id}`, function () {
                new bootstrap.Modal(
                    document.getElementById('detailsNhanVienModal')
                ).show();
            });
        };

        function submitCreateNhanVien() {
            const form = $("#createNhanVienModal form");
            if (!form.length) return;

            if (window.tpGiaDinhTable) {
                const data = window.tpGiaDinhTable.rows().data().toArray();
                $('#ThanhPhanGiaDinhJson').val(JSON.stringify(data));
            }

            $.ajax({
                url: form.attr("action"),
                type: "POST",
                data: form.serialize(),
                success: function (res) {
                    if (res.success === true) {
                        bootstrap.Modal.getInstance(
                            document.getElementById('createNhanVienModal')
                        ).hide();

                        nhanVienTable.ajax.reload(null, false);
                    } else {
                        alert(res.message);
                    }
                }
            });
        }
        $(document).on("submit", "#nhanVienUpdateForm", function (e) {
            e.preventDefault();

            $.ajax({
                url: "/NhanVien/Update",
                method: "POST",
                data: $(this).serialize(),
                success: function () {
                    bootstrap.Modal.getInstance(
                        document.getElementById("detailsNhanVienModal")
                    ).hide();

                    nhanVienTable.ajax.reload(null, false);
                },
                error: function () {
                    alert("Cập nhật thất bại");
                }
            });
        });
        $(document).on("click", "#btnDeleteNhanVien", function () {
            const id = $(this).data("id");

            if (!confirm("Nhân viên này sẽ bị xóa!")) return;

            $.ajax({
                url: "/NhanViens/Delete",
                method: "POST",
                data: {
                    id: id,
                    __RequestVerificationToken: $(
                        '#nhanVienUpdateForm input[name="__RequestVerificationToken"]'
                    ).val()
                },
                success: function () {
                    bootstrap.Modal.getInstance(
                        document.getElementById("detailsNhanVienModal")
                    ).hide();

                    nhanVienTable.ajax.reload(null, false);
                },
                error: function () {
                    alert("Xóa thất bại");
                }
            });
        });
    </script>
}