@* @model IEnumerable<TSN_HR_Web.Models.NhanVien> *@
@model IEnumerable<TSN_HR_Web.ViewModels.NhanVienListItemViewModel>
@section Styles {
    <link rel="stylesheet" href="~/css/NhanVien.css" />
}


@{
    ViewData["Title"] = "Danh Sach Nhan Vien";
}

<h1 class="mb-3">Danh sách nhân viên</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm nhân viên</a>
</p>

<div class="table-wrapper table-responsive">
    <table class="table table-striped table-bordered table-sm mt-3 table-sticky">
        <thead>
            <tr>
                <th>Mã Nhân Viên</th>
                <th>Họ và tên</th>
                <th>Sơ yếu lý lịch</th>
                <th>Mã thông tin bảo hiểm</th>
                <th>Mã hợp đồng</th>
                <th>Mã lương</th>
                <th style="width: 180px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNhanVien</td>
                <td>@item.HoVaTen</td>
                <td>@item.SoYeuLyLichId</td>
                <td>@item.ThongTinBaoHiemId</td>
                <td>@item.HopDongId</td>
                <td>@item.MaLuongId</td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                        Chi tiết
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                        Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                        Xóa
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
