@* @model IEnumerable<TSN_HR_Web.Models.NhanVien> *@
@model IEnumerable<TSN_HR_Web.ViewModels.NhanVienListItemViewModel>
@section Styles {
    <link rel="stylesheet" href="~/css/NhanVien.css" />
}


@{
    ViewData["Title"] = "Danh Sach Nhan Vien";
}

<h2 class="mb-3">Danh sách nhân viên</h2>

<button class="btn btn-primary" onclick="loadCreateForm()"> + Thêm nhân viên</button>

<div class="table-wrapper table-responsive">
    <table class="table table-striped table-bordered table-sm mt-3 table-sticky">
        <thead class="table-light">
            <tr>
                <th>Mã Nhân Viên</th>
                <th>Họ và tên</th>
                <th>Sơ yếu lý lịch</th>
                <th>Thông tin bảo hiểm</th>
                <th>Thông tin hợp đồng</th>
                <th>Thông tin lương</th>
                <th style="width: 180px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaNhanVien</td>
                    <td>@item.HoVaTen</td>
                    <td>@item.SoYeuLyLichId</td>
                    <td>@item.ThongTinBaoHiemId</td>
                    <td>@item.HopDongId</td>
                    <td>@item.MaLuongId</td>
                    <td class="text-nowrap">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                            Chi tiết
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                            Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal for Create -->
<div class="modal fade" id="createNhanVienModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Thêm nhân viên</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="createModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script>
    function loadCreateForm() {
        $.get("/NhanViens/Create", function (html) {
            $("#createModalBody").html(html);
            var modal = new bootstrap.Modal(document.getElementById('createNhanVienModal'));
            modal.show();
        });
    }
</script>