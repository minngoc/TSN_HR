@model TSN_HR_Web.Models.ViewModels.ChucVuCreateViewModel
@{
    Layout = null;
    ViewData["Title"] = "Chức vụ";
}

<form asp-controller="ChucVus"
      asp-action="Create"
      method="post"
      class="chucvu-create-form px-3">

    @Html.AntiForgeryToken()

    <!-- MÃ BỘ PHẬN (DROPDOWN) -->
    <div class="mb-4">
        <label class="form-label small fw-medium">Mã Phòng Ban</label>
        <select asp-for="bo_phan_id"
                asp-items="Model.BoPhanList"
                class="form-select rounded-pill">
            <option value="">-- Chọn phòng ban --</option>
        </select>
        <span asp-validation-for="bo_phan_id"
              class="text-danger small"></span>
    </div>

    <!-- MÃ CHỨC VỤ -->
    <div class="mb-3">
        <label class="form-label small fw-medium">Mã chức vụ</label>
        <input asp-for="ma_chuc_vu"
               class="form-control rounded-pill"
               placeholder="VD: CV01" />
        <span asp-validation-for="ma_chuc_vu"
              class="text-danger small"></span>
    </div>

    <!-- TÊN CHỨC VỤ -->
    <div class="mb-3">
        <label class="form-label small fw-medium">Tên chức vụ</label>
        <input asp-for="ten_chuc_vu"
               class="form-control rounded-pill"
               placeholder="Trưởng phòng" />
        <span asp-validation-for="ten_chuc_vu"
              class="text-danger small"></span>
    </div>
</form>
