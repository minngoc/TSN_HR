@{
    ViewData["Title"] = "Danh sách Chức Vụ";
}

<div class="chucvu-page">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">Danh Sách Chức Vụ</h3>

        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadCreateForm()">
            + Thêm mới Chức Vụ
        </button>
    </div>

    <!-- TABLE -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive p-3">
            <table id="chucVuTable" class="display w-100"></table>
        </div>
    </div>
</div>

<!-- MODAL CREATE -->
<div class="modal fade" id="createChucVuModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Chức Vụ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="submitCreateChucVu()">
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<!-- MODAL DETAILS -->
<div class="modal fade" id="detailsChucVuModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết Chức vụ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="detailsChucVuModalBody"></div>
        </div>
    </div>
</div>


@section Scripts {

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {

            window.chucVuTable = $('#chucVuTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetData", "ChucVus")',
                    type: 'GET'
                },

                scrollY: '55vh',
                scrollCollapse: true,
                paging: true,

                columns: [
                    { data: 'ma_chuc_vu', title: 'Mã Chức Vụ', className: 'text-center' },
                    { data: 'ten_chuc_vu', title: 'Tên Chức Vụ', className: 'text-center' },
                    { data: 'ma_bo_phan', title: 'Mã Phòng Ban', className: 'text-center' },
                    {
                        data: 'id',
                        title: 'Chi tiết',
                        orderable: false,
                        searchable: false,
                        className: 'text-center',
                        render: function (id) {
                            return `
                                <button class="btn btn-sm btn-warning text-white"
                                        onclick="loadChucVuDetails(${id})">
                                    Chi tiết
                                </button>
                            `;
                        }
                    }

                ],

                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.8/i18n/vi.json',
                    emptyTable: "Chưa có thông tin..."
                }
            });
        });

        // ===== MODAL CREATE =====
        window.loadCreateForm = function () {
            $("#createModalBody").load("@Url.Action("Create", "ChucVus")", function (response, status, xhr) {
                if (status === "error") {
                    console.error("Load Create form failed", xhr.status);
                    return;
                }
                new bootstrap.Modal(
                    document.getElementById('createChucVuModal')
                ).show();
            });
        };
        window.loadChucVuDetails = function (id) {
            $("#detailsChucVuModalBody").html("");

            $("#detailsChucVuModalBody").load(`/ChucVus/Details/${id}`, function () {
                new bootstrap.Modal(
                    document.getElementById('detailsChucVuModal')
                ).show();
            });
        };


        function submitCreateChucVu() {
            const form = $("#createChucVuModal form");
            if (!form.length) return;

            if (!form.valid()) return;

            $.ajax({
                url: form.attr("action"),
                type: "POST",
                data: form.serialize(),
                success: function (res) {
                    if ($(res).find("form").length > 0) {
                        $("#createModalBody").html(res);
                    } else {
                        $('#createChucVuModal').modal('hide');
                        chucVuTable.ajax.reload(null, false);
                    }
                }
            });
            fetch(form.action, {
                method: "POST",
                body: submitCreateChucVu,
                credentials: "same-origin"
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast(data.message);

                        // đóng modal
                        const modalEl = document.getElementById('createChucVuModal');
                        bootstrap.Modal.getInstance(modalEl).hide();

                        // reload datatable
                        $('#chucVuTable').DataTable().ajax.reload(null, false);
                    } else {
                        showErrorToast(data.message);
                    }
                })
                .catch(err => {
                    showErrorToast("Không thể kết nối tới server");
                });

        }
        $(document).on("submit", "#chucVuUpdateForm", function (e) {
            e.preventDefault();

            $.ajax({
                url: "/ChucVus/Update",
                method: "POST",
                data: $(this).serialize(),
                success: function () {
                    bootstrap.Modal.getInstance(
                        document.getElementById("detailsChucVuModal")
                    ).hide();

                    chucVuTable.ajax.reload(null, false);
                },
                error: function () {
                    alert("Cập nhật thất bại");
                }
            });
        });
        $(document).on("click", "#btnDeleteChucVu", function () {
            const id = $(this).data("id");

            if (!confirm("Bạn có chắc chắn muốn xóa Chức vụ này không?")) return;

            $.ajax({
                url: "/ChucVus/Delete",
                method: "POST",
                data: {
                    id: id,
                    __RequestVerificationToken: $(
                        '#chucVuUpdateForm input[name="__RequestVerificationToken"]'
                    ).val()
                },
                success: function () {
                    bootstrap.Modal.getInstance(
                        document.getElementById("detailsChucVuModal")
                    ).hide();

                    chucVuTable.ajax.reload(null, false);
                },
                error: function () {
                    alert("Xóa thất bại");
                }
            });
        });

    </script>
}