@model TSN_HR_Web.Models.ViewModels.ChucVuCreateViewModel
@{
    Layout = null;
}

<form id="chucVuUpdateForm">
    @Html.AntiForgeryToken()

    <partial name="_ChucVuForm" model="Model" />

    <div class="d-flex justify-content-between align-items-center mt-3">
        <!-- DELETE -->
        <button type="button"
                class="btn btn-danger"
                id="btnDeleteChucVu"
                data-id="@Model.id">
            Xóa
        </button>

        <!-- CANCEL + SAVE -->
        <div class="d-flex gap-2">
            <button type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal">
                Hủy
            </button>

            <button type="submit"
                    class="btn btn-primary">
                Lưu
            </button>
        </div>
    </div>
</form>
