@model IEnumerable<TSN_HR_Web.Models.MucLuong>

@{
    ViewData["Title"] = "Muc Luong";
}

<h3 class="mb-3">Mức lương theo ngạch</h3>

<p>
    <a asp-action="Create" class="btn btn-primary">
        + Thêm mới
    </a>
</p>

<table class="table table-striped table-bordered table-sm mt-3">
    <thead class="table-light">
        <tr>
            <th>Mã Mức Lương</th>
            <th>Ngạch</th>
            <th>Bậc</th>
            <th>Hệ Số</th>
            <th style="width: 150px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.MaMucLuong</td>
            <td>@item.NgachCongVienChucId</td>
            <td>@item.BacLuong</td>
            <td>@item.HeSoLuong</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Sửa</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
