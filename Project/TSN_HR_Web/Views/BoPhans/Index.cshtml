@model IEnumerable<TSN_HR_Web.Models.ViewModels.BoPhanListItemViewModel>

@section Styles {
    <link rel="stylesheet" href="~/css/BoPhan.css" />
}

@{
    ViewData["Title"] = "Danh sách Phòng Ban";
}

<div class="phongban-page">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">Danh Sách Phòng Ban</h3>

        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadCreateForm()">
            + Thêm mới Phòng Ban
        </button>
    </div>
    <!-- TABLE -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Mã Phòng Ban</th>
                        <th class="text-center">Tên Phòng Ban</th>
                        <th class="text-center">Mã Cơ Sở</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.ma_bo_phan</td>
                            <td class="text-center">@item.ten_bo_phan</td>
                            <td class="text-center">@item.ma_co_so</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PAGINATION  -->
    <nav class="mt-4 d-flex justify-content-end">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link">Trước</a>
            </li>
            <li class="page-item active">
                <a class="page-link">1</a>
            </li>
            <li class="page-item">
                <a class="page-link">2</a>
            </li>
            <li class="page-item">
                <a class="page-link">3</a>
            </li>
            <li class="page-item">
                <a class="page-link">Sau</a>
            </li>
        </ul>
    </nav>

</div>

<!-- ===== MODAL CREATE ===== -->
<div class="modal fade" id="createPhongBanModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Phòng Ban</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="submit" class="btn btn-primary rounded-pill px-4" onclick="document.querySelector('#createPhongBanModal form').submit()">
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.loadCreateForm = function () {
            $("#createModalBody").load("@Url.Action("Create", "BoPhans")", function (response, status, xhr) {
                if (status === "error") {
                    console.error("Load Create form failed", xhr.status);
                    return;
                }

                const modal = new bootstrap.Modal(
                    document.getElementById('createPhongBanModal')
                );
                modal.show();
            });
        };
    </script>
}