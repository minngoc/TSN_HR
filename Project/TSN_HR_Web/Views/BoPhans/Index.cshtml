@{
    ViewData["Title"] = "Danh sách Phòng Ban";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />

<link rel="stylesheet" href="~/css/datatables-custom.css" />


<div class="phongban-page">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">Danh Sách Phòng Ban</h3>

        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadCreateForm()">
            + Thêm mới Phòng Ban
        </button>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive p-3">
            <table id="boPhanTable" class="display w-100"></table>
        </div>
    </div>
</div>

<!-- MODAL CREATE -->
<div class="modal fade" id="createBoPhanModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Phòng Ban</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="submitCreateBoPhan()">
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<!-- MODAL DETAILS -->
<div class="modal fade" id="detailsBoPhanModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết Phòng Ban</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="detailsBoPhanModalBody"></div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {

            window.boPhanTable = $('#boPhanTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetData", "BoPhans")',
                    type: 'GET'
                },
                scrollY: '55vh',
                scrollCollapse: true,
                paging: true,

                columns: [
                    { data: 'ma_bo_phan', title: 'Mã Phòng Ban', className: 'text-center' },
                    { data: 'ten_bo_phan', title: 'Tên Phòng Ban', className: 'text-center' },
                    { data: 'ma_co_so', title: 'Mã Cơ Sở', className: 'text-center' },
                    {
                        data: 'id',
                        title: 'Chi tiết',
                        orderable: false,
                        searchable: false,
                        className: 'text-center',
                        render: function (id) {
                            return `
                    <button class="btn btn-sm btn-warning text-white"
                            onclick="loadBoPhanDetails(${id})">
                        Chi tiết
                    </button>
                `;
                        }
                    }
                ],
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.8/i18n/vi.json'
                }
            });
        });
        // ===== MODAL CREATE =====
        window.loadCreateForm = function () {
            $("#createModalBody").load("@Url.Action("Create", "BoPhans")", function (response, status) {
                if (status === "error") {
                    console.error("Load Create form failed");
                    return;
                }
                new bootstrap.Modal(
                    document.getElementById('createBoPhanModal')
                ).show();
            });
        };
        // ===== MODAL DETAILS =====
        window.loadBoPhanDetails = function (id) {
            $("#detailsBoPhanModalBody").html("");

            $("#detailsBoPhanModalBody").load(`/BoPhans/Details/${id}`, function () {
                new bootstrap.Modal(
                    document.getElementById('detailsBoPhanModal')
                ).show();
            });
        };

        function submitCreateBoPhan() {
            const form = $("#createBoPhanModal form");
            if (!form.length) return;

            if (!form.valid()) return;

            $.ajax({
                url: form.attr("action"),
                type: "POST",
                data: form.serialize(),
                success: function (res) {
                    if ($(res).find("form").length > 0) {
                        $("#createModalBody").html(res);
                    } else {
                        $('#createBoPhanModal').modal('hide');
                        cboPhanTable.ajax.reload(null, false);
                    }
                }
            });
        }
    </script>

}