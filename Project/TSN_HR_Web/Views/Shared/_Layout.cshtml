<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tan Son Nhat Hotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TSN_HR_Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- WRAPPER: sidebar + content -->
    <div class="tsn-wrapper">

        <!-- SIDEBAR -->
        <nav id="sidebar" class="tsn-sidebar d-flex flex-column">

            <!-- Sidebar Header -->
            <div class="sidebar-header d-flex align-items-center px-3 py-3">
                <img src="~/Images/TSN_Logo.png" height="40" class="me-2" />
                <span class="sidebar-title fw-bold text-white flex-grow-1">Tan Son Nhat Hotel</span>

                <button id="sidebarToggle" class="btn btn-sm btn-toggle text-white ms-1">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <ul class="nav nav-pills flex-column mb-auto px-2">

                <!-- Trang chủ -->
                <li class="nav-item">
                    <a class="nav-link text-white fw-semibold d-flex align-items-center" href="/">
                        <span class="menu-icon me-2">ICON</span>
                        <span class="menu-text">Trang Chủ</span>
                    </a>
                </li>

                <!-- Nhân viên -->
                <li class="nav-item">
                    <button class="nav-link tsn-nav-toggle text-start text-white fw-semibold d-flex align-items-center"
                        data-bs-toggle="collapse" data-bs-target="#menuNhanVien" aria-expanded="false">
                        <span class="menu-icon me-2">ICON</span>
                        <span class="menu-text flex-grow-1">Nhân Viên</span>
                    </button>

                    <div class="collapse" id="menuNhanVien">
                        <ul class="nav flex-column ms-3 mb-2">
                            <li class="nav-item">
                                <a class="nav-link tsn-sub-link" asp-controller="NhanViens" asp-action="Index">
                                    Danh sách nhân viên
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <!-- Phòng ban -->
                <li class="nav-item">
                    <button class="nav-link tsn-nav-toggle text-start text-white fw-semibold d-flex align-items-center"
                        data-bs-toggle="collapse" data-bs-target="#menuPhongBan" aria-expanded="false">
                        <span class="menu-icon me-2">ICON</span>
                        <span class="menu-text flex-grow-1">Phòng Ban</span>
                    </button>

                    <div class="collapse" id="menuPhongBan">
                        <ul class="nav flex-column ms-3 mb-2">
                            <li><a class="nav-link tsn-sub-link" asp-controller="BoPhans" asp-action="Index">Danh sách
                                    phòng ban</a></li>
                            <li><a class="nav-link tsn-sub-link" asp-controller="ChucVus" asp-action="Index">Danh sách
                                    chức vụ</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Lương -->
                <li class="nav-item">
                    <button class="nav-link tsn-nav-toggle text-start text-white fw-semibold d-flex align-items-center"
                        data-bs-toggle="collapse" data-bs-target="#menuLuong" aria-expanded="false">
                        <span class="menu-icon me-2">ICON</span>
                        <span class="menu-text flex-grow-1">Lương</span>
                    </button>

                    <div class="collapse" id="menuLuong">
                        <ul class="nav flex-column ms-3 mb-2">
                            <li><a class="nav-link tsn-sub-link" asp-controller="NgachCongVienChucs"
                                    asp-action="Index">Ngạch Công Viên Chức</a></li>
                            <li><a class="nav-link tsn-sub-link" asp-controller="MucLuongs" asp-action="Index">Mức
                                    Lương</a></li>
                            <li><a class="nav-link tsn-sub-link" asp-controller="LuongNhanViens"
                                    asp-action="Index">Lương</a></li>
                        </ul>
                    </div>
                </li>

                <!-- Bảo hiểm -->
                <li class="nav-item">
                    <a class="nav-link text-white fw-semibold d-flex align-items-center" href="#">
                        <span class="menu-icon me-2">ICON</span>
                        <span class="menu-text">Bảo Hiểm</span>
                    </a>
                </li>

                <!-- Cơ sở -->
                <li class="nav-item">
                    <a class="nav-link text-white fw-semibold d-flex align-items-center" asp-controller="CoSos"
                        asp-action="Index">
                        <span class="menu-icon me-2">ICON</span>
                        <span class="menu-text">Cơ Sở</span>
                    </a>
                </li>

            </ul>

        </nav>


        <!-- CONTENT -->
        <div id="mainContent" class="expanded flex-grow-1 d-flex flex-column">
            <main role="main" class="pb-3 tsn-main-content">
                <div class="container-fluid py-4">
                    @RenderBody()
                </div>
            </main>
        </div>

    </div>

    <!-- FOOTER -->
    <footer class="tsn-footer mt-auto">
        <div class="container text-center py-2 text-white">
            &copy; 2025 - Tan Son Nhat Hotels Group Human Resource Managemnent |
            Design and coded by TMN | All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>