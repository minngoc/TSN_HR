@model TSN_HR_Web.Models.ViewModels.CoSoCreateViewModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Cơ Sở";
}

<form asp-controller="CoSos" asp-action="Create" method="post" class="coso-create-form">
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-11 mx-auto">
            <div class="row g-3 mb-3 d-flex justify-content-around">
                <div class="col-lg-2 col-md-6">
                    <label>Mã Cơ sở</label>
                    <input asp-for="ma_co_so" class="form-control rounded-pill" />
                </div>
                <div class="col-lg-2 col-md-6">
                    <label>Tên cơ sở</label>
                    <input asp-for="ten_co_so" class="form-control rounded-pill" />
                </div>

                <div class="col-lg-4 col-md-6">
                    <label>Địa chỉ</label>
                    <input asp-for="dia_chi" class="form-control rounded-pill" />
                </div>
            </div>
        </div>
    </div>
</form>