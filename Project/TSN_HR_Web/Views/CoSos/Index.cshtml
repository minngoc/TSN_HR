@model IEnumerable<TSN_HR_Web.Models.CoSo>

@{
    ViewData["Title"] = "Danh Sach Cum";
}

@section Styles {
    <link rel="stylesheet" href="~/css/CoSo.css" />

}

<h3 class="mb-3">Danh sách Cụm</h3>

<p>
    <a asp-action="Create" class="btn btn-primary">
        + Thêm mới cụm
    </a>
</p>

<div class="table-wrapper table-responsive">
    <table class="table table-striped table-bordered table-sm mt-3">
        <thead class="table-light">
            <tr>
                <th>Mã Cụm</th>
                <th>Tên Cụm</th>
                <th>Địa chỉ</th>
                <th style="width: 150px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaCoSo</td>
                    <td>@item.TenCoSo</td>
                    <td>@item.DiaChi</td>
                    <td class="text-nowrap">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Chi
                            tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>