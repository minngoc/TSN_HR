@model IEnumerable<TSN_HR_Web.Models.ViewModels.CoSoListItemViewModel>

@section Styles {
    <link rel="stylesheet" href="~/css/CoSo.css" />
}

@{
    ViewData["Title"] = "Danh sách Cơ Sở";
}

<div class="coso-page">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">Danh Sách Cơ Sở</h3>

        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadCreateForm()">
            + Thêm mới Cơ sở
        </button>
    </div>
    <!-- TABLE -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">Mã cơ sở</th>
                        <th class="text-center">Tên cơ sở</th>
                        <th class="text-center">Địa chỉ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.ma_co_so</td>
                            <td class="text-center">@item.ten_co_so</td>
                            <td class="text-center">@item.dia_chi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PAGINATION  -->
    <nav class="mt-4 d-flex justify-content-end">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link">Trước</a>
            </li>
            <li class="page-item active">
                <a class="page-link">1</a>
            </li>
            <li class="page-item">
                <a class="page-link">2</a>
            </li>
            <li class="page-item">
                <a class="page-link">3</a>
            </li>
            <li class="page-item">
                <a class="page-link">Sau</a>
            </li>
        </ul>
    </nav>

</div>

<!-- ===== MODAL CREATE ===== -->
<div class="modal fade" id="createCoSoModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Cơ sở</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="submitCreateCoSo()">
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.loadCreateForm = function () {
            $("#createModalBody").load("@Url.Action("Create", "CoSos")", function (response, status) {
                if (status === "error") {
                    console.error("Load Create form failed");
                    return;
                }

                const modal = new bootstrap.Modal(
                    document.getElementById('createCoSoModal')
                );
                modal.show();
            });
        };

        function submitCreateCoSo() {
            const form = $("#createCoSoModal form");

            if (!form.length) return;

            // chạy validation
            if (!form.valid()) {
                // map asp.net → bootstrap
                form.find("input, select, textarea").each(function () {
                    const input = $(this);

                    if (input.hasClass("input-validation-error")) {
                        input.addClass("is-invalid").removeClass("is-valid");
                    } else {
                        input.removeClass("is-invalid").addClass("is-valid");
                    }
                });
                return;
            }

            $.ajax({
                url: form.attr("action"),
                type: "POST",
                data: form.serialize(),
                success: function (response) {
                    if ($(response).find("form").length > 0) {
                        $("#createModalBody").html(response);
                    } else {
                        location.reload();
                    }
                }
            });
        }
    </script>
}