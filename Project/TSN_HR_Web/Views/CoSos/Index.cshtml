@{
    ViewData["Title"] = "Danh sách Cơ Sở";
}

<div class="coso-page">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold mb-0">Danh Sách Cơ Sở</h3>

        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="loadCreateForm()">
            + Thêm mới Cơ Sở
        </button>
    </div>

    <!-- TABLE -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive p-3">
            <table id="coSoTable" class="display w-100"></table>
        </div>
    </div>
</div>

<!-- ===== MODAL CREATE ===== -->
<div class="modal fade" id="createCoSoModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới Cơ Sở</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createModalBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    Hủy
                </button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="submitCreateCoSo()">
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<!-- DETAILS MODAL -->
<div class="modal fade" id="detailsCoSoModal" tabindex="-1">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết Cơ sở</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="detailsCoSoModalBody">

            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {
            window.coSoTable = $('#coSoTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetData", "CoSos")',
                    type: 'GET'
                },

                scrollY: '55vh',
                scrollCollapse: true,
                paging: true,

                columns: [
                    { data: 'ma_co_so', title: 'Mã Cơ Sở', className: 'text-center' },
                    { data: 'ten_co_so', title: 'Tên Cơ Sở', className: 'text-center' },
                    { data: 'dia_chi', title: 'Địa Chỉ', className: 'text-center' },
                    {
                        title: 'Chi tiết',
                        orderable: false,
                        searchable: false,
                        className: 'text-center',
                        data: 'id',
                        render: function (data, type, row) {
                            return `
                                <button class="btn btn-sm btn-warning text-white"
                                        onclick="loadCoSoDetails(${row.id})">
                                    Chi tiết
                                </button>
                            `;
                        }
                    }
                ],

                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.8/i18n/vi.json',
                    emptyTable: "Chưa có thông tin..."
                }
            });
        });

        // ===== MODAL CREATE =====
        window.loadCreateForm = function () {
            $("#createModalBody").load("@Url.Action("Create", "CoSos")", function (response, status) {
                if (status === "error") {
                    console.error("Load Create form failed");
                    return;
                }
                new bootstrap.Modal(
                    document.getElementById('createCoSoModal')
                ).show();
            });
        };
        // ===== MODAL Detail=====
        window.loadCoSoDetails = function (id) {
            $("#detailsCoSoModalBody").load(`/CoSos/Details/${id}`, function () {
                const modal = new bootstrap.Modal(
                    document.getElementById('detailsCoSoModal')
                );
                modal.show();
            });
        };

        function submitCreateCoSo() {
            const form = $("#createCoSoModal form");
            if (!form.length) return;

            if (!form.valid()) return;

            $.ajax({
                url: form.attr("action"),
                type: "POST",
                data: form.serialize(),
                success: function (res) {
                    if ($(res).find("form").length > 0) {
                        $("#createModalBody").html(res);
                    } else {
                        $('#createCoSoModal').modal('hide');
                        coSoTable.ajax.reload(null, false);
                    }
                }
            });
        }
        $(document).on("submit", "#coSoUpdateForm", function (e) {
            e.preventDefault();

            $.ajax({
                url: "/CoSos/Update",
                method: "POST",
                data: $(this).serialize(),
                success: function () {
                    bootstrap.Modal.getInstance(
                        document.getElementById("detailsCoSoModal")
                    ).hide();

                    // reload table
                    coSoTable.ajax.reload(null, false);
                },
                error: function () {
                    alert("Cập nhật thất bại");
                }
            });
        });
        $(document).on("click", "#btnDeleteCoSo", function () {
            const id = $(this).data("id");

            if (!confirm("Bạn có chắc chắn muốn xóa Cơ sở này không?")) return;

            $.ajax({
                url: "/CoSos/Delete",
                method: "POST",
                data: {
                    id: id,
                    __RequestVerificationToken: $(
                        '#coSoUpdateForm input[name="__RequestVerificationToken"]'
                    ).val()
                },
                success: function () {
                    bootstrap.Modal.getInstance(
                        document.getElementById("detailsCoSoModal")
                    ).hide();

                    coSoTable.ajax.reload(null, false);
                },
                error: function () {
                    alert("Xóa thất bại");
                }
            });
        });
    </script>
}